{{#bs-panel title="Drawing Tools"}}
  <h2>Draw</h2>
    <ul>
      {{#each drawingModes as |mode|}}
        <li>{{mode.name}} <strong>{{mode.key}}</strong></li>
      {{/each}}
    </ul>
  <h2>Adjust</h2>
    <ul>
      {{#each adjustModes as |mode|}}
        <li>{{mode.name}} <strong>{{mode.key}}</strong></li>
      {{/each}}
    </ul>
  <h2>Flow</h2>
    <ul>
      {{#each flowModes as |mode|}}
        <li>{{mode.name}} <strong>{{mode.key}}</strong></li>
      {{/each}}
    </ul>
{{/bs-panel}}

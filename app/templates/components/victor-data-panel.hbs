{{#bs-panel title="Data"}}
  <h2>Scalars</h2>
    <ul>
      {{#each scalars as |scalar|}}
        {{#victor-data-panel-scalar-item scalar=scalar}}
          {{variable-definition variable=scalar}}
        {{/victor-data-panel-scalar-item}}
      {{/each}}
      {{! item for every scalarList }}
      <li class="add-instruction-item list-group-item" {{action 'addScalar'}}>Add</li>
    </ul>

  <h2>Table</h2>
  <table class="table table-hover table-condensed">
    <tr>
      {{#each tableHeaders as |header|}}
        <th>{{header}}</th>
      {{/each}}
    </tr>
    {{#each table.rows as |row|}}
      {{table-row-definition variable=row numColumns=table.numColumns}}
    {{/each}}
    <tr>
      <td {{bind-attr colspan=numberOfHeaders}} class="add-table-row" {{action 'addTableRow'}}>
        Add row
      </td>
    </tr>
  </table>
{{/bs-panel}}
